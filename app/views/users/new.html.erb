<div class="columns">
  <div class="column is-one-third">
    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title">Create An Account</h1>
      </div>
      <div class="card-content">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.text_field :name, placeholder: "Name...", class: "input" %>
          </div>
          <div class="field">
            <%= f.text_field :email, placeholder: "Email...", class: "input" %>
          </div>
          <div class="field">
            <%= f.password_field :password, placeholder: "Password...", class: "input" %>
          </div>
          <div class="field">
            <%= f.submit "Register", class: "button is-primary" %>
          </div>
        <% end %>
        <%= link_to "Sign up with Facebook", auth_facebook_path, class: "button is-info", style: "margin-top: 10px;" %>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>
